#!/bin/sh
set -e

cd "$(dirname "$0")/.."

# ------

export POSTGRES_HOST=127.0.0.1
export POSTGRES_PORT=5432
export POSTGRES_DB=circle_test
export POSTGRES_USER=ubuntu

NUGET_VERSION=$(cat version.txt)

# ------

sh script/clean
sh script/bootstrap
sh script/build
sh script/test
sh script/package ${NUGET_VERSION}

# --------
